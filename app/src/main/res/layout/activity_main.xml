<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/main_background"
        android:layout_height="match_parent">


    <ProgressBar
            android:id="@+id/Pbar"
            android:layout_width="59dp"
            android:layout_height="82dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="40dp"
            android:indeterminateDrawable="@drawable/progress"
            android:visibility="gone"


            />

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6">

        <Button
                android:id="@+id/delbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/background_selected_t"
                android:clickable="true"
                android:contentDescription="@string/deletedcases"
                android:onClick="LVA"
                android:text="@string/deletedcases"
                android:textColor="@color/mdtp_white"
                android:textSize="9sp"
                android:textStyle="normal|bold|italic" />

        <Button
                android:id="@+id/nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/background_selected_t"
                android:contentDescription="@string/nm"
                android:onClick="LVA"
                android:text="@string/nm"
                android:textColor="@color/mdtp_white"
                android:textSize="9sp"
                android:textStyle="normal|bold|italic" />

        <Button
                android:id="@+id/cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/background_selected_t"
                android:clickable="true"
                android:contentDescription="@string/cm"
                android:onClick="LVA"
                android:text="@string/cm"
                android:textColor="@color/mdtp_white"
                android:textSize="9sp"
                android:textStyle="normal|bold|italic" />

        <Button
                android:id="@+id/nwbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/background_selected_t"
                android:contentDescription="@string/nw"
                android:onClick="LVA"
                android:text="@string/nw"
                android:textColor="@color/mdtp_white"
                android:textSize="9sp"
                android:textStyle="normal|bold|italic" />

        <Button
                android:id="@+id/cwbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/background_selected_t"
                android:clickable="true"
                android:contentDescription="@string/cw"
                android:onClick="LVA"
                android:text="@string/cw"
                android:textColor="@color/mdtp_white"
                android:textSize="9sp"
                android:textStyle="normal|bold|italic" />

        <Button
                android:id="@+id/allbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/background_selected_t"
                android:contentDescription="@string/all"
                android:onClick="LVA"
                android:text="@string/all"
                android:textColor="@color/mdtp_white"
                android:textSize="9sp"
                android:textStyle="normal|bold|italic" />

    </LinearLayout>


    <TextView
            android:id="@+id/TTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_title"
            android:padding="5dp"
            android:text="SuperCase"
            android:textAlignment="center"
            android:textColor="@color/myYellow"
            android:textSize="25sp"
            app:layout_anchor="@+id/linearLayout"
            app:layout_anchorGravity="bottom|center" />

    <ListView
            android:id="@+id/new_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="1dp"
            android:paddingStart="1dp"
            android:paddingEnd="1dp">

    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addfltbtn"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_input_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.881"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.989" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
